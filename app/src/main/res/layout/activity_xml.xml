<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_xml"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mpi.network.Activity.XMLActivity">
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/pullXML"
        android:text="Pull解析方式"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:layout_marginTop="20dp"
        android:textColor="#fff"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/saxXML"
        android:text="SAX解析方式"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:layout_marginTop="20dp"
        android:textColor="#fff"/>
    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/xmlTextView"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/xmlTextView2"
        android:layout_gravity="center"

        android:textSize="15sp"
        android:layout_marginTop="20dp"/>
</LinearLayout>
